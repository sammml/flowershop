<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/background2</item>
    </style>

    <style name="view">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">545dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:alpha">.55</item>

    </style>

    <style name="image_view">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/logo</item>
    </style>

    <style name="divider1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">180dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/divider1</item>
    </style>

    <style name="description">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">240dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">@string/description</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="divider2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">360dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/divider2</item>
    </style>


    <style name="address">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">420dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="phone">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">440dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="hours">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">460dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <style name="hours2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">480dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
